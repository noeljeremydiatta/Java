package td_java;

import java.util.Scanner;

public class Exo1 {

	public static void main(String[] args) {
		int A,B;
		do {
		Scanner nombre = new Scanner(System.in);
		System.out.print( "Saisissez la valeur de a: ");
		 A = nombre.nextInt( );
		System.out.print( "Saisissez la valeur de b: ");
		  B = nombre.nextInt( );
		} while(A <= 0 && B <= 0);
		int quotient;
		double ratio;
		int r = A % B;
		if (r == 0) {
		quotient = A / B;
		System.out.println("le quotient entier da la divison est: "+ quotient);
		System.out.println("le reste de la division est: "+ r);
		}
	
		else {
			  ratio  = A / B;
			System.out.println("le quotient réel de la division est: "+ ratio);
			System.out.println("le quotient de la division entière est: "+ r);
		}
		
		
	}
}


